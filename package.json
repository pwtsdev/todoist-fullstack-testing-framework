{
  "name": "pwts-base-setup",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "pretest": "tsc --noEmit && eslint .",
    "test": "npx playwright test",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:ui": "npx playwright test --ui",
    "test:nolint": "npx playwright test",
    "show-report": "npx playwright show-report",
    "prepare": "husky"
  },
  "keywords": [
    "playwright",
    "typescript",
    "testing",
    "<pwts.dev>",
    "pwts",
    "automation"
  ],
  "author": "<pwts.dev>",
  "license": "ISC",
  "description": "Base setup for Playwright with TypeScript by <pwts.dev>",
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@faker-js/faker": "^9.3.0",
    "@playwright/test": "^1.55.0",
    "@types/node": "^22.10.2",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-playwright": "^2.1.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.3",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "endOfLine": "auto",
    "printWidth": 120
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint",
      "tsc --noEmit --skipLibCheck"
    ]
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "dotenv": "^16.4.7",
    "tslog": "^4.9.3"
  }
}
